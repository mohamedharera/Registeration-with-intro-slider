<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181717"
    tools:context="com.example.mohamed.registerform.InstRegister">


    <EditText
        android:id="@+id/txtName2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColorHint="@color/background"
        android:background="@drawable/inst_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtLast2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColorHint="@color/background"
        android:background="@drawable/inst_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtName2"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtpass2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColorHint="@color/background"
        android:background="@drawable/inst_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtLast2"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtemail2"
        android:layout_width="300dp"
        android:background="@drawable/inst_text"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColorHint="@color/background"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtpass2"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtPhone2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColorHint="@color/background"
        android:background="@drawable/inst_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtemail2"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="phone"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnReg2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textColor="#f9f6f6"
        android:background="@color/background2"
        android:layout_below="@+id/txtPhone2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="register2"
        android:text="Registeration" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to login page"
        android:onClick="login2"
        android:textSize="17dp"
        android:textColor="#f7f3f3"
        android:layout_below="@+id/btnReg2"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
